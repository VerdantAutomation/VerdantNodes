{
  "type": "http://verdant.io/definitions/node/hardware/mainboard",
  "mainboardDefinition": {
    "name": "Oxygen",
    "hardware": {
      "cpus": [
        {
          "speed": "96MHz",
          "membus": 32,
          "architecture": "arm",
          "family": "Cortex",
          "subfamily": "M4",
          "model": "STM32F411CEU6"
        }
      ],
      "os": [
        {
          "id": "netmf",
          "version": ">4.3"
        }
      ],
      "buses": [
        {
          "busType": "i2c",
          "channels": [
            {
              "name": "I2C",
              "excludes": [ "*.PB8", "*.PB9" ]
            }
          ]
        },
        {
          "busType": "spi",
          "channels": [
            {
              "name": "SPI1",
              "excludes": [ "*.PA5", "*.PA6", "*.PA7" ]
            },
            {
              "name": "SPI2",
              "excludes": [ "*.PB15", "*.PB14", "*.PB13" ]
            }
          ]
        },
        {
          "busType": "analog",
          "channels": [
            {
              "name": "PA0",
              "excludes": [ "*.PA0" ]
            },
            {
              "name": "PA1",
              "excludes": [ "*.PA1" ]
            },
            {
              "name": "PA2",
              "excludes": [ "*.PA2" ]
            },
            {
              "name": "PA3",
              "excludes": [ "*.PA3" ]
            },
            {
              "name": "PA4",
              "excludes": [ "*.PA4" ]
            },
            {
              "name": "PB0",
              "excludes": [ "*.PB0" ]
            },
            {
              "name": "PB1",
              "excludes": [ "*.PB1" ]
            },
            {
              "name": "PC0",
              "excludes": [ "*.PC0" ]
            },
            {
              "name": "PC1",
              "excludes": [ "*.PC1" ]
            },
            {
              "name": "PC2",
              "excludes": [ "*.PC2" ]
            },
            {
              "name": "PC3",
              "excludes": [ "*.PC3" ]
            }
          ]
        },
        {
          "busType": "gpio3v3",
          "channels": [
            { "name": "" }
          ]
        },
        {
          "busType": "pwm",
          "channels": [
            {
              "name": "PB0",
              "excludes": [ "*.PB0" ]
            },
            {
              "name": "PB1",
              "excludes": [ "*.PB1" ]
            },
            {
              "name": "PB4",
              "excludes": [ "*.PB4" ]
            }

          ]
        },
        {
          "busType": "uartsimple",
          "channels": [
            {
              "name": "UART1",
              "features": [ "TX", "RX" ],
              "excludes": [ "*.PA9", "*.PA10" ]
            },
            {
              "name": "UART2",
              "features": [ "TX", "RX", "CTS", "RTS" ],
              "excludes": [ "*.PA0", "*.PA1", "*.PA2", "*.PA3" ]
            }
          ]
        }
      ]
    },
    "software": {
      "toolchain": "vs2015",
      "buildCmd": "",
      "projectTemplate": "url to blob goes here",
      "requiresNuget": [
        {
          "id": "Verdant.Node.Core",
          "version": "0.0.1-beta"
        }
      ]
    }
  }
}